<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnboardingInviteCode">

    <ImageView
        android:id="@+id/upperCurve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bg_upper_curve"
        android:text="Hello World!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/oneBanc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_onebanc_logo"
        android:paddingTop="15sp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/closeIconInvite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_back"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/graphicInviteCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:src="@drawable/ic_invite_graphic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:gravity="left"
        android:textSize="16dp"
        android:paddingStart="40sp"
        android:paddingBottom="10dp"
        android:background="@drawable/fadding_view"
        android:text="@string/hey_did_you_get_the_invite_code"
        app:layout_constraintBottom_toTopOf="@id/tvSubEmail"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvSubEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fadding_view"
        android:layout_marginStart="26dp"
        android:paddingStart="40sp"
        android:paddingBottom="10dp"
        android:textSize="14dp"
        android:text="Check your work email"
        app:layout_constraintBottom_toTopOf="@id/etInviteCode"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etInviteCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter 6-Digit Invite Code"
        android:inputType="number"
        android:background="@drawable/rounded_corner"
        android:textSize="18dp"
        android:paddingStart="40sp"
        android:paddingRight="40dp"
        android:padding="10dp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/graphicInviteCode" />

    <Button
        android:id="@+id/btNextInviteCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        android:text="Next"
        android:layout_marginTop="50dp"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etInviteCode" />
</androidx.constraintlayout.widget.ConstraintLayout>