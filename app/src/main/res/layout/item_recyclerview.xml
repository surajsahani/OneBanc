<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="20sp"
        android:src="@drawable/ic_sms"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />
<ImageView
    android:id="@+id/ivIconMore"
    app:layout_constraintTop_toBottomOf="@id/ivIcon"
    app:layout_constraintBottom_toBottomOf="parent"
    android:src="@drawable/ic_more"
    android:layout_width="wrap_content"
    app:layout_constraintStart_toStartOf="@id/ivIcon"
    app:layout_constraintEnd_toEndOf="@id/ivIcon"
    android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv1Permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:text="SMS Read"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@id/tvSub1"
        app:layout_constraintTop_toTopOf="@id/ivIcon"
        app:layout_constraintStart_toEndOf="@id/ivIcon"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvSub1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingEnd="10sp"
        app:layout_constraintTop_toBottomOf="@id/tv1Permission"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/ivIcon"
        app:layout_constraintBottom_toBottomOf="@id/ivIcon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20sp"
        android:text="We need this access for seamless video \nKYC process" />

</androidx.constraintlayout.widget.ConstraintLayout>